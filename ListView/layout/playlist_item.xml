<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlist"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <ImageView
        android:id="@+id/albumImg_playList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"

        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/tv_title_playList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="노래 제목"
        android:textColor="#3F414E"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_name_playList"
        app:layout_constraintStart_toEndOf="@id/albumImg_playList"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/tv_name_playList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수명"
        android:textColor="#A1A4B2"
        android:textSize="12sp"

        app:layout_constraintStart_toEndOf="@id/albumImg_playList"
        app:layout_constraintTop_toBottomOf="@id/tv_title_playList"
        app:layout_constraintBottom_toBottomOf="parent"

        android:gravity="center_vertical"

        />

    <ImageView
        android:id="@+id/btn_dot_playList"
        android:layout_width="20dp"
        android:layout_height="20dp"


        android:background="@drawable/ic_dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="1"

        android:layout_marginTop="8dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
